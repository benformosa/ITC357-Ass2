<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	id="WebApp_ID" version="3.0">
	<display-name>ITC357-Ass2</display-name>
	<welcome-file-list>
		<welcome-file>secure/main</welcome-file>
	</welcome-file-list>

	<servlet-mapping>
		<servlet-name>default</servlet-name>
		<url-pattern>/static/*</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>Login</servlet-name>
		<jsp-file>/login.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
		<servlet-name>Login</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>Logout</servlet-name>
		<jsp-file>/logout.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
		<servlet-name>Logout</servlet-name>
		<url-pattern>/logout</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>SignUp</servlet-name>
		<jsp-file>/signup.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
		<servlet-name>SignUp</servlet-name>
		<url-pattern>/signup</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>LoginController</servlet-name>
		<servlet-class>com.github.benformosa.email.controller.LoginController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>LoginController</servlet-name>
		<url-pattern>/logincontroller</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>SignUpController</servlet-name>
		<servlet-class>com.github.benformosa.email.controller.SignUpController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>SignUpController</servlet-name>
		<url-pattern>/signupcontroller</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>MessageController</servlet-name>
		<servlet-class>com.github.benformosa.email.controller.MessageController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>MessageController</servlet-name>
		<url-pattern>/secure/main</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>Messages</servlet-name>
		<jsp-file>/messages.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
		<servlet-name>Messages</servlet-name>
		<url-pattern>/secure/messages</url-pattern>
	</servlet-mapping>

  <servlet>
    <servlet-name>UserController</servlet-name>
    <servlet-class>com.github.benformosa.email.controller.UserController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>UserController</servlet-name>
    <url-pattern>/secure/users</url-pattern>
  </servlet-mapping>

	<servlet>
		<servlet-name>Users</servlet-name>
		<jsp-file>/users.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
		<servlet-name>Users</servlet-name>
		<url-pattern>/secure/userspage</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>Message</servlet-name>
		<jsp-file>/message.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
		<servlet-name>Message</servlet-name>
		<url-pattern>/secure/message</url-pattern>
	</servlet-mapping>

	<filter>
		<filter-name>SessionFilter</filter-name>
		<filter-class>com.github.benformosa.email.util.SessionFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>SessionFilter</filter-name>
		<url-pattern>/secure/*</url-pattern>
	</filter-mapping>

	<session-config>
		<session-timeout>30</session-timeout>
	</session-config>
</web-app>